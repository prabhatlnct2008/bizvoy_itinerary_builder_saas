# =========================================
# Bizvoy Itinerary Builder - Backend Environment Variables
# Copy this file to .env and update the values for your environment
# =========================================

# =========================================
# APPLICATION SETTINGS
# =========================================
APP_NAME="Travel SaaS Itinerary Builder"
DEBUG=True
API_V1_PREFIX="/api/v1"

# Environment: development, staging, production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =========================================
# DATABASE
# =========================================
# SQLite (Local Development)
DATABASE_URL="sqlite:///./travel_saas.db"

# PostgreSQL (Azure/Production)
# DATABASE_URL="postgresql+psycopg://user:password@your-server.postgres.database.azure.com:5432/bizvoy?sslmode=require"

# =========================================
# SECURITY
# =========================================
SECRET_KEY="your-secret-key-here-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =========================================
# OpenAI CONFIGURATION
# =========================================
# Standard OpenAI (default)
OPENAI_API_KEY="your-openai-api-key-here"
CHAT_MODEL="gpt-4o-mini"
EMBEDDING_MODEL="text-embedding-3-small"

# =========================================
# Azure OpenAI (Optional - set USE_AZURE_OPENAI=true to enable)
# =========================================
USE_AZURE_OPENAI=false
# AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"
# AZURE_OPENAI_API_KEY="your-azure-openai-key"
# AZURE_OPENAI_API_VERSION="2024-06-01"
# AZURE_OPENAI_CHAT_DEPLOYMENT="gpt-4o-mini"
# AZURE_OPENAI_EMBED_DEPLOYMENT="text-embedding-3-small"

# =========================================
# Azure Application Insights (Optional)
# =========================================
# APPLICATIONINSIGHTS_CONNECTION_STRING="InstrumentationKey=xxx;IngestionEndpoint=https://xxx.applicationinsights.azure.com/"

# =========================================
# ChromaDB
# =========================================
CHROMADB_PERSIST_DIR="./chroma_data"

# =========================================
# File Storage
# =========================================
UPLOAD_DIR="./uploads"
PDF_STORAGE_DIR="./pdfs"
MAX_UPLOAD_SIZE=10485760

# =========================================
# CORS
# =========================================
# Local Development
BACKEND_CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Azure Deployment (update with your actual domains)
# BACKEND_CORS_ORIGINS=["https://your-frontend.azurestaticapps.net", "https://your-custom-domain.com"]
